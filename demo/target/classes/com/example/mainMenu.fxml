<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>

<VBox alignment="TOP_RIGHT" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainController">
   <children>
        <AnchorPane prefHeight = "200" prefWidth = "550">
            
        </AnchorPane>
        <VBox spacing = "7" alignment = "CENTER">
            <Label text="SNAKE" style="-fx-font-size: 20px;" />
        </VBox>
        <HBox spacing="7" alignment = "CENTER"> 
            <Button fx:id="primaryButton" text="Play" prefWidth="150" onAction="#switchToPrimary"/>
            <Button fx:id ="saveButton" text="Saves" prefWidth = "150" onAction="#switchToSaves"/>
            <Button fx:id = "replayButton" text = "Replays" prefWidth = "150" onAction = "#switchtoReplays"/>
        </HBox> 
   </children>
   <padding>
      <Insets bottom="40.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
